
meta {
	title: "transmission-grid-mapping-style";
	description: "A style for fast electrical grid mapping of wide-area transmission networks. Adapted from the "detailed power grid style" by FLacombe.";
	version: "0.1";	
	author: "Mwiche";
}

/* mapcss colors https://www.w3schools.com/cssref/css_colors.php */

setting::hide_icons {
  type: boolean;
  label: tr("Hide icons at low zoom");
  default: true;
}

setting::shrink_nodes {
  type: boolean;
  label: tr("Less obtrusive node symbols at low zoom");
  default: true;
}

setting::hide_tagged_waynodes {
  type: boolean;
  label: tr("Hide tagged waynodes at low zoom");
  default: true;
}


/* Power Portal */
node[power=portal] {
    icon-image: "presets/power/portal.svg";
    set icon_z17;
}
node|z-15[power=portal] {
    symbol-shape: square;
    symbol-fill-color: teal;
    symbol-size: 5; 
}

/* Power Tower */
node|z15-[power=tower] {
	icon-image: "presets/power/tower.svg";
	set icon_z17;
      
}
node|z-15[power=tower] {
    symbol-shape: square;
    symbol-size: 0; 
    symbol-fill-opacity:0;
	symbol-stroke-opacity:0;
	major-z-index:1.0; 
}

node|z15-[power=pole] {
	icon-image: "presets/power/pole.svg";
	set icon_z17;
      
}
node|z-15[power=pole] {
    symbol-shape: square;
    symbol-size: 0; 
    symbol-fill-opacity:0;
	symbol-stroke-opacity:0;
	major-z-index:1.0; 
}
node[power=tower]:unconnected {
    symbol-shape: square;
    symbol-fill-color: blue;
    symbol-size: 10; 
    symbol-fill-opacity:0.7;
	major-z-index:1.0;  
}

node[power=pole][switch] {
    icon-image: "presets/power/pole_switch.svg";
    set icon_z17;
}
node[power=pole][transformer=distribution] {
    icon-image: "presets/power/pole_transformer.svg";
    set icon_z17;
}
node[power=catenary_mast] {
    icon-image: "presets/power/catenary_mast.svg";
    set icon_z17;
}
node[power=connection] {
    icon-image: "presets/power/connection.svg";
    set icon_z17;
}
node[power=insulator] {
    icon-image: "presets/power/insulator.svg";
    set icon_z17;
}
node[man_made=street_cabinet][street_cabinet=power] {
    icon-image: "presets/power/cable_distribution_cabinet.svg";
    set icon_z17;
}
node[power=generator] {
    icon-image: "presets/power/generator.svg";
    set icon_z17;
}
node[power=heliostat] {
    icon-image: "presets/power/heliostat.svg";
    set icon_z17;
}
node[power=substation] {
    icon-image: "presets/power/substation.svg";
    set icon_z17;
}
node[power=transformer] {
    icon-image: "presets/power/transformer.svg";
    set icon_z17;
}
node[power=terminal] {
    icon-image: "presets/power/terminal.svg";
    set icon_z17;
}
node[power=switch] {
    icon-image: "presets/power/switch.svg";
    set icon_z17;
}
node|z-16[power=switch] {
    font-size: 0;
	symbol-size:0;
}
node[power=converter] {
    icon-image: "presets/power/converter.svg";
    set icon_z17;
}
node[power=compensator] {
    icon-image: "presets/power/compensator.svg";
    set icon_z17;
}


/* Power Substations */
node|z18-[power=substation][substation=industrial]{
	text: "operator";
	font-size: 8;
	symbol-size:5;
	color:red;
	fill-opacity:0.05; 
}
node|z-18[power=substation][substation=industrial]{
	text: "operator";
	font-size: 0;
	symbol-size:0;
	color:red;
	fill-opacity:0.05; 
}
area[power=substation]{
	width:15;
	symbol-size:5;
	color:white;
	fill-opacity:0.05; 
}

area|z12-[power=substation]{
	width:3;

	text: "name";
	text-color:black;
	text-halo-color: white;
	text-halo-radius: 2;
	text-halo-opacity: 0.8;
    font-size: 20; 
	font-weight:bold; 
	text-halo-opacity: 0.8; 
	text-position: center; 
	z-index: 8;
}

/* Transmission Substation */
/* Rule for substations */
area[power=substation][substation=transmission] {
    width: 20;
    symbol-size: 5;
    color: #DC143C;
    fill-color: #DC143C;
    fill-opacity: 0.05;
    
}
area|z12-[power=substation][substation=transmission] {
	width:3;

	text: "name";
	text-color:black;
	text-halo-color: white;
	text-halo-radius: 2;
	text-halo-opacity: 0.8;
    font-size: 20; 
	font-weight:bold; 
	text-halo-opacity: 0.8; 
	text-position: center; 
	z-index: 8; 
}


/* Distribution Substation */
