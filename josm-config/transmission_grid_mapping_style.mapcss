/* Style for proposed power lines and constructed lines */
way[power=line][proposed=yes] {
    width: 3;
    dashes: 8, 4;    /* Dashed pattern (8px dash, 4px gap) */
    opacity: 0.8;
}

/* Style for proposed power lines and constructed lines */
way[power=line][construction=yes] {
    width: 3;
    dashes: 8, 4;    /* Dashed pattern (8px dash, 4px gap) */
    opacity: 0.8;
}

