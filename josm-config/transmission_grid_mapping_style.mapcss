}

/* Power line */
way|z16-19[power=line]{
	text:cables;
	font-size:15;
	text-halo-radius:2;
}

/* Power Cable */
way[power=cable]{
	dashes:2,2;
	text:cables;
	text-halo-radius:2;
}
way|z16-19[power=cable]{
	dashes:2,2;
	text:cables;
	font-size:15;
	text-color:white;
	text-halo-radius:2;
}
way|z16-19[power=cable][location=underwater]{
	dashes:2,2;
	text:cables;
	font-size:15;
	text-halo-radius:2;
}

/* Power Line Busbar */ 
way[power=line][line=busbar]{
	casing-color:#FFD800;
	casing-width:1;
	width:3;
}

/* Power Line Bay */
way[power=line][line=bay]{
	casing-color:lightgray;
	casing-width:2;
	width:3;
}

/* Power Plant */ 
way[power=plant]{
	width:15;
	symbol-size:5;
	color:black;
	fill-color:magenta;
	fill-opacity:0.05; 
}
area|z12-[power=plant]{
	width:3;

	text: "name";
	text-color:black;
