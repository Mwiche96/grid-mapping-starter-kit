}


/* Power Generator */
node|z-15[power=generator] {
	font-size: 0;
    symbol-shape: square;
    symbol-fill-color: yellow;
    symbol-size: 7; 
    symbol-fill-opacity:0.7;
}
way[power=generator] {
	width:15;
    symbol-shape: square;
    symbol-fill-color: yellow;
    symbol-size: 7; 
    symbol-fill-opacity:0.7;
}
